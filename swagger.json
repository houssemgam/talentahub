{
  "openapi": "3.0.0",
  "info": {
    "title": "API Talent",
    "description": "API de gestion des talents",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:5002"
    }
  ],
  
  
  "paths": {
    "/demandechangementrole/soumettreDemande": {
      "post": {
        "summary": "Soumettre une demande de changement de rôle",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TalentRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Demande soumise avec succès"
          },
          "500": {
            "description": "Erreur lors de la soumission de la demande"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "TalentRequest": {
        "type": "object",
        "properties": {
          "skills": {
            "type": "string",
            "description": "Compétences du talent"
          },
          "experience": {
            "type": "string",
            "description": "Expérience du talent"
          },
          "email": {
            "type": "string",
            "description": "Adresse e-mail du talent"
          },
          "password": {
            "type": "string",
            "description": "Mot de passe du talent"
          },
          "user": {
            "type": "string",
            "required": false
          },
          "recipient": {
            "type": "string",
            "format": "ObjectId",
            "description": "Identifiant du destinataire de la notification"
          }
        }
      }
    }
  }
}
